<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="arm">


  <link name="world_link">
    <visual>
      <geometry>
          <box size="0.1 0.1 0.1" />
      </geometry>
      <origin rpy="0 0 0.5" xyz="0 0 0"/>
      <material name="Cyan">
      <color rgba="0 1 0 0.1"/>
    </material>
    </visual>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="1.06682889e+08" ixy="0.0" ixz="0.0" iyy="9.92165844e+07" iyz="0.0" izz="1.26939175e+08"/>
    </inertial>    
  </link>

  

  <joint name="j0" type="revolute">
    <parent link="world_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.1"/> <!--Position of the joint with respect the previous link-->
    <axis xyz="0 0 1"/>
    <limit effort="300" velocity="0.1" lower="-2.57" upper="2.57"/>
  </joint>

  <link name="link1">
    <visual>
      <geometry>
          <box size="0.1 0.1 0.2" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.1"/> <!--Position of the center of mass-->
    </visual> 
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="1.35223008e+07" ixy="0.0" ixz="0.0" iyy="8.13814925e+06" iyz="0.0" izz="2.14903814e+07"/>
    </inertial>
  </link>

  <joint name="j1" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.2"/> <!--Position of the joint with respect the j0 frame-->
    <axis xyz="0 1 0" />
    <limit effort="300" velocity="0.1" lower="-2.57" upper="2.57"/>
  </joint>


  <link name="link2">
    <visual>
      <geometry>
          <box size="0.1 0.1 0.2" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.1"/> <!--Position of the center of with respect its own frame (reference frame of the link)-->
    </visual> 
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="1.35223008e+07" ixy="0.0" ixz="0.0" iyy="8.13814925e+06" iyz="0.0" izz="2.14903814e+07"/>
    </inertial>
  </link>

</robot>
